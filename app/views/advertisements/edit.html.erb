<h1>Edit Advertisement</h1>

<%= form_with(model: @advertisement, url: advertisement_path(@advertisement), method: :patch) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :body %>
  <%= form.text_area :body %>

  <% if current_user&.isModerator? %>
    <%= form.label "Is approved?" %>
    <%= form.check_box :isApproved %>
  <% end %>

  <%= form.submit "Update Advertisement" %>
<% end %>
