<h1>New Advertisement</h1>

<%= form_with(model: @advertisement, url: advertisements_path, method: :post) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :body %>
  <%= form.text_area :body %>

  <% if current_user.isModerator %>
    <%= form.label :isApproved %>
    <%= form.check_box :isApproved %>
  <% end %>

  <%= form.submit "Create Advertisement" %>
<% end %>
