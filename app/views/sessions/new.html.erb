<body data-turbolinks="false">
<h1>Login</h1>

<%= form_with(url: login_path, method: :post) do |form| %>
  <%= form.label :email %>
  <%= form.email_field :email, name: 'session[email]' %>

  <%= form.label :password %>
  <%= form.password_field :password, name: 'session[password]' %>

  <%= form.submit "Login" %>
<% end %>

<% if flash[:alert] %>
  <p class="error"><%= flash[:alert] %></p>
<% end %>
</body>